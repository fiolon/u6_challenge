<div class="column">
  <div class="card">
      <div class="card-content">
        <% if customer.image.present? %>
        <div class="card-image">
          <figure class="image is-64x64">
            <%= image_tag customer.image %>
          </figure>
        </div>
        <% end %>
      </div>
      <div class="ml-4">
      <footer class="card-footer">
        <h3 class="card-footer-item subtitle"><%= customer.full_name %></h3>
        <p class="card-footer-item subtitle"><%= customer.email %></p>
        <p class="card-footer-item subtitle"><%= customer.phone_number %></p>
      </footer>
    </div>
  </div>
</div>